    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script
            src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous">
    </script>

    <script src="/edit.js"></script>
</head>
<script>
    if(<%= checkuser %>){
        alert("Sorry, the username you set is repetitive with the one set by the previous person, please choose another username!");
    }
</script>
<body onload="editprofile()">
<nav class="navbar navbar-expand-sm navbar-light fixed-top" style="background-color: lavender; height:56px">
    <a class="navbar-brand" href="/community"  style="margin-left: 30px">
        <img src="/images/dog.jpg" alt="Logo" style="width:40px;">
    </a>
    <ul class="navbar-nav">
        <li class="nav-item active">
            <a class="nav-link" href="/">Homepage</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="/community">Community</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/upload">Post</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/myprofile">My profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/logout">Log out</a>
        </li>
    </ul>
    <a class="navbar-brand" href="/community"  style="margin-left: 30px">
        <img src="/images/dog.jpg" alt="Logo" style="width:40px;">
    </a>
</nav>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4" ></div>
        <div class="col-lg-8" >
            <div class="card" style="width:600px; height:500px;border-radius: 30px;top:150px;background-color: lavender">
                <div class="card-body">
                    <form id="edit" action="/edit" method="post"><br/>
                        <table>
                            <tr>
                                <td><label for="Email">Email</label></td>
                                <td><input type="text" name="email"  placeholder="<%=users[0].email%>" placeholder="This part is optional" id="Email">
                                    <span id="checkemail"  style="color:red;font-weight: bold"></span>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="firstname">Firstname</label></td>
                                <td><input type="text" placeholder="<%=users[0].firstname%>" name="firstname" id="firstname">
                                    <span id="checkfirstname"  style="color:red;font-weight: bold"></span>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="lastname">Lastname</label></td>
                                <td><input type="text" placeholder="<%=users[0].surname%>" name="lastname" id="lastname">
                                    <span id="checklastname"  style="color:red;font-weight: bold"></span>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="phone">PhoneNumber</label></td>
                                <td><input type="text" placeholder="<%=users[0].phone%>" name="phone"  id="phone">
                                    <span id="checkphone" style="color:red;font-weight: bold"></span>
                                </td>
                            </tr>
                            <tr><td><label for="bio">Bio</label></td>
                                <td><textarea rows="5" id="bio" name="bio" placeholder="<%=users[0].bio%>" placeholder="This part is optional"></textarea>
                                </td>
                            </tr>
                            <tr/>
                            <tr>
                                <td><input  type="submit" value="submit" class="btn btn-outline-warning"></td>
                            </tr>
                        </table>
                    </form><br/>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>